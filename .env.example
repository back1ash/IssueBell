# ─── App ──────────────────────────────────────────────────────────────────────
SECRET_KEY=change-me-to-a-long-random-string

# ─── Discord ───────────────────────────────────────────────────────────────────
# Bot token (Discord Developer Portal → Bot → Token)
DISCORD_BOT_TOKEN=

# OAuth2 credentials (Discord Developer Portal → OAuth2)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# The URL Discord will redirect to after login
# e.g. http://localhost:8000/auth/callback
DISCORD_REDIRECT_URI=https://issuebell.com/auth/callback

# ─── GitHub OAuth ────────────────────────────────────────────────────────────
# Create an OAuth App at https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://issuebell.com/auth/github/callback

# How often (seconds) to poll GitHub for new issues (default 300 = 5 min)
POLL_INTERVAL=300
