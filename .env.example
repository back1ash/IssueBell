# ─── App ──────────────────────────────────────────────────────────────────────
SECRET_KEY=change-me-to-a-long-random-string

# ─── Discord ───────────────────────────────────────────────────────────────────
# Bot token (Discord Developer Portal → Bot → Token)
DISCORD_BOT_TOKEN=

# OAuth2 credentials (Discord Developer Portal → OAuth2)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# The URL Discord will redirect to after login
# e.g. http://localhost:8000/auth/callback
DISCORD_REDIRECT_URI=http://localhost:8000/auth/callback

# ─── GitHub ────────────────────────────────────────────────────────────────────
# Webhook secret (set this in each repo's webhook settings)
GITHUB_WEBHOOK_SECRET=change-me-to-a-webhook-secret
